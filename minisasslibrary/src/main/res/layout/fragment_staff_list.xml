<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="@dimen/mon_padding"
    tools:context="com.com.boha.monitor.library.fragments.ProjectSiteStaffListFragment">

    <RelativeLayout
        android:id="@+id/STAFF_LIST_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/STAFF_LIST_hero"
            android:src="@drawable/banner_river1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mon_hero_height_small" />

        <TextView
            android:id="@+id/STAFF_LIST_label"
            style="@style/Title2TextStyleGrey"
            android:layout_marginTop="@dimen/mon_wide"
            android:textColor="@color/white"
            android:text="@string/action_team"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/STAFF_LIST_top"
        android:background="@color/beige_pale"
        android:layout_marginTop="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ListView
            android:id="@+id/STAFF_LIST_list"
            android:layout_marginTop="@dimen/mon_wide"
            android:background="@color/white"
            android:dividerHeight="@dimen/mon_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/STAFF_LIST_staffCount"
            android:text="00"
            style="@style/BlackCircle"
            android:layout_marginRight="@dimen/mon_margin"
            android:layout_alignParentRight="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>
