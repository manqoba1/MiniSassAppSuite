<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sifiso.codetribe.minisasslibrary.activities.PictureRecyclerGridActivity"
     >

    <RelativeLayout
        android:id="@+id/RCV_top"
        android:background="@color/white"
        android:padding="@dimen/sas_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/RCV_title"
            android:layout_marginLeft="@dimen/sas_divider"
            android:text="PlaceHolder Title 001"
            style="@style/TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/RCV_btn"
            android:layout_alignParentRight="true"
            android:text="Button text goes here"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/FI_recyclerView"
        android:background="@color/white"
        android:layout_below="@id/RCV_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</RelativeLayout>
