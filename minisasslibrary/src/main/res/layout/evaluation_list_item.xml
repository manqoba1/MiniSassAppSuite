<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
   android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/ELI_team"
        style="@style/Title2TextStyleBlack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="date dkjfjkd "
        android:id="@+id/ELI_date"
        style="@style/TextStyleGreySmall"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ELI_team"

        android:layout_marginTop="@dimen/padding_top_10"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:background="@color/beige"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:layout_weight="8"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Clarity"
                android:textSize="16sp"
                android:textColor="@color/background_floating_material_dark"
                android:layout_weight="1"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pH Level"
                android:textSize="16sp"
                android:textColor="@color/background_floating_material_dark"
                android:id="@+id/textView10"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Temperature"
                android:textColor="@color/background_floating_material_dark"
                android:id="@+id/textView12"
                android:textSize="16sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oxygen level"
                android:textSize="16sp"
                android:textColor="@color/background_floating_material_dark"
                android:id="@+id/textView13"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="River total score"
                android:textSize="16sp"
                android:textColor="@color/background_floating_material_dark"
                android:id="@+id/textView11"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center"
            android:background="@color/beige"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:text="0.0"
                style="@style/TextStyleGreySmall"
                android:id="@+id/ELI_wc"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0.0"

                style="@style/TextStyleGreySmall"

                android:id="@+id/ELI_pH"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"

                style="@style/TextStyleGreySmall"
                android:id="@+id/ELI_wt"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0.0"

                style="@style/TextStyleGreySmall"
                android:id="@+id/ELI_oxygen"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0.0"
                style="@style/Title2TextStyleGray"
                android:id="@+id/ELI_score"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="@dimen/padding_top_10"
        android:background="@color/beige_pale"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Remark/Observation"
            style="@style/Title3TextStyleBlack"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/padding_top_10"
            android:id="@+id/ELI_remarks"
            style="@style/TextStyleGreySmall"
            android:layout_below="@+id/ELI_condition" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="modifyjd"
            android:layout_marginTop="@dimen/padding_top_10"
            android:layout_below="@+id/textView4"
            android:textColor="@color/maroon"
            android:id="@+id/ELI_condition"/>
    </RelativeLayout>


</RelativeLayout>