<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xwhite_rounded_corners"
    android:padding="15dp" >

    <TextView
        android:id="@+id/TI_positionCounter"
        style="@style/GreyCountBoxSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="00" />

    <TextView
        android:id="@+id/TI_name"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TI_positionCounter"
        android:padding="5dp"
        android:text="Team Name Here"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TI_count"
        style="@style/GreenCountBoxSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="00"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TI_dateLabel"
        style="@style/TextStyleGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/TI_name"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TI_count"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/date_started"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TI_date"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TI_count"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/TI_dateLabel"
        android:text="Wednesday, 30 December 2014"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TI_class"
        style="@style/TextStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TI_date"
        android:layout_marginTop="5dp"
        android:text="Famous First Intake" />

</RelativeLayout>