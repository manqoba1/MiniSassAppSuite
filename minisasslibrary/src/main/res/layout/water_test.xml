<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xborder"
    android:layout_margin="5dp"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_weight="0.7"
            android:text="Water clarity"
            android:textAppearance="?android:attr/textAppearanceSmall" />



        <EditText
            android:id="@+id/WC_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ems="4"
            android:textColor="@color/gray"
            android:gravity="center"
            android:hint="0"
            android:layout_weight="2.3"
            android:inputType="number"
            android:text="0.0"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Water Temperature"
            android:layout_weight="0.7"
            android:textAppearance="?android:attr/textAppearanceSmall" />



        <EditText
            android:id="@+id/WT_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ems="4"
            android:layout_weight="2.3"
            android:textColor="@color/gray"
            android:gravity="center"
            android:hint="0"
            android:inputType="numberDecimal"
            android:text="0.0"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="pH"
            android:layout_weight="0.7"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <EditText
            android:id="@+id/WP_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="2.3"
            android:ems="4"
            android:textColor="@color/gray"
            android:gravity="center"
            android:hint="0"
            android:inputType="numberDecimal"
            android:text="0.0"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Oxygen Level"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/WO_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="2.3"
            android:ems="4"
            android:textColor="@color/gray"
            android:gravity="center"
            android:hint="0"
            android:inputType="numberDecimal"
            android:text="0.0"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r4"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Conductivity"
            android:layout_weight="0.7"
            android:textAppearance="?android:attr/textAppearanceSmall" />



        <EditText
            android:id="@+id/WE_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="2.3"
            android:ems="4"
            android:gravity="center"
            android:textColor="@color/gray"
            android:hint="0"
            android:inputType="numberDecimal"
            android:text="0.0"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>
</RelativeLayout>