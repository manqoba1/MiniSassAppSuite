<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="time_label">
        <item name="android:textSize">@dimen/time_label_size</item>
        <item name="android:textColor">@color/numbers_text_color</item>
    </style>
    <style name="ampm_label">
        <item name="android:textSize">@dimen/ampm_label_size</item>
        <item name="android:textColor">@color/ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Title3TextStyleBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="BlueCircleSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xblue_oval_small</item>
    </style>
    <style name="TextStyleRedSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/translucent_red</item>
    </style>
    <style name="RedCircle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xred_oval</item>
    </style>
    <style name="Title2TextStyleBlue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="TextStyleBlue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Title2TextStyleBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Title3TextStyleBlue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Title1TextStyleBlue" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="TextStyleSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextStyleBlueSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>