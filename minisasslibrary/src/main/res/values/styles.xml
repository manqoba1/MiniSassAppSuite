<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RiverTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleStyle">@style/actionBarStyle</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark2</item>
    </style>

    <style name="actionBarStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>

        <item name="android:background">@color/blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="time_label">
        <item name="android:textSize">@dimen/time_label_size</item>
        <item name="android:textColor">@color/numbers_text_color</item>
    </style>

    <style name="ampm_label">
        <item name="android:textSize">@dimen/ampm_label_size</item>
        <item name="android:textColor">@color/ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title3TextStyleBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BlueCircleSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xblue_oval_small</item>
    </style>

    <style name="Title2TextStyleBlue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Title2TextStyleBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleBlueSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyleGreySmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title2TextStyleGreen" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonRed" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/xred_dark_rounded_corners</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ButtonBlue" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/xround_button</item>
    </style>
</resources>