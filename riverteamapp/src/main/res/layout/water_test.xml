<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Water clarity"
            android:id="@+id/textView1"
            android:layout_alignBottom="@+id/WC_add"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="+"
            style="@style/BlueCircleSmall"
            android:id="@+id/WC_add"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="0"
            android:ems="3"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:id="@+id/WC_score"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/WC_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:layout_marginRight="5dp"
            style="@style/BlueCircleSmall"
            android:id="@+id/WC_minus"
            android:layout_alignBottom="@+id/WC_add"
            android:layout_toStartOf="@+id/WC_score" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
