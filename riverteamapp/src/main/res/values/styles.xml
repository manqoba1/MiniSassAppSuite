<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleStyle">@style/actionBarStyle</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark2</item>
        <item name="android:textColorPrimary">@color/transparent_black</item>
    </style>
    <style name="actionBarStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>

        <item name="android:background">@color/blue</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="colorPrimary">@color/opaque_red</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="android:titleTextStyle">@style/actionBarStyle</item>
        <item name="android:fontFamily">sans-serif-light</item>

    </style>
</resources>
